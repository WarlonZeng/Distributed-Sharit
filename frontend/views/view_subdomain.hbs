{{#if logged}}
<a href="/logout"><button class="btn btn-danger">Logout</button></a><br><br>
{{else}}
<a href="/login"><button class="btn btn-danger">Login</button></a>
<a href="/register"><button class="btn btn-danger">Register</button></a><br><br>
{{/if}}
		
<a href="/NYU/{{sub}}/createThread"><button class="btn btn-success">Create Thread</button></a><br><br>

<a href="/join_sub/{{subdomain_name}}"><button class="btn btn-primary">Join Sub</button></a>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		{{#each threads}}
			<div class="jumbotron">
				<div class="votes">
					<input type="image" class="upVoteThread voteButts" info="/voteThread/{{thread_id}}/1" id={{thread_id}} src="/images/up.png" /><br>
					<span>{{points}}</span><br>
					<input type="image" class="downVoteThread voteButts" info="/voteThread/{{thread_id}}/-1" id={{thread_id}} src="/images/down.png" /><br>
				</div>
				<div>
					<h2><u><a href="/NYU/{{../sub}}/{{../subid}}/{{../user}}/{{id}}">{{title}}</a><br></u></h2>
					<h4>{{context}}</h4>
					<h5>Created by: <u>{{author}}</u> on {{date_posted}}</h5>
					{{#if this.filename}}
						Attached File: <a href="/downloadFile/{{id}}" target="_blank">{{filename}}</a>
					{{/if}}
				</div>
			</div><br>
		{{/each}}
	</div>
</div>