<div class="row">
	<div class="col-md-3 col-md-offset-1">
		<br><br><br>

		{{#if logged}}
		<a href="/logout"><button class="btn btn-danger">Logout</button></a><br><br>
		{{else}}
		<a href="/login"><button class="btn btn-danger">Login</button></a>
		<a href="/register"><button class="btn btn-danger">Register</button></a><br><br>
		{{/if}}

		<a href="/create_subdomain/NYU"><button class="btn btn-success">Create Subdomain</button></a><br><br>

		<div class="dropdown">
			<button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Check out subdomains
				<span class="caret"></span></button>
				<ul class="dropdown-menu">
					{{#each check_subdomains}}
						<li><a href="/NYU/{{subdomain_name}}">{{subdomain_name}}</a></li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
	<div class="col-md-6 col-md-offset-3">
		{{#each threads}}
			<div class="jumbotron">
				<div class="votes">
					<input type="image" class="upVoteThread voteButts" info="/vote_thread/NYU/{{thread_id}}/1" id={{thread_id}} src="/images/up.png" /><br>
					<span>{{thread_points}}</span><br>
					<input type="image" class="downVoteThread voteButts" info="/vote_thread/NYU/{{thread_id}}/-1" id={{thread_id}} src="/images/down.png" /><br>
				</div>
				<div>
					<h2><u><a href="/NYU/{{subdomain_name}}/{{thread_id}}">{{title}}</a><br></u></h2>
					<h4>{{context}}</h4>
					<h5>Created by: <u>{{author}}</u> on {{date_posted}}</h5>
					{{#if this.filename}}
						Attached File: <a href="/download_file/NYU/{{thread_id}}" target="_blank">{{filename}}</a>
					{{/if}}
				</div>
			</div><br>
		{{/each}}
	</div>
</div>