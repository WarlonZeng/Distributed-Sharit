<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="jumbotron">

				<form method="POST" action="/createThread" enctype="multipart/form-data">
					<div class="form-group">
					
						<label for="subdomain_id">subdomain_id</label>
						<input type="number" name="subdomain_id" class="form-control" onChange={this.onChange} required />

						<label for="title">title</label>
						<input type="text" name="title" class="form-control" onChange={this.onChange} required />

						<label for="author">author</label>
						<input type="text" name="author" class="form-control" onChange={this.onChange} required />

						<label for="context">context</label>
						<input type="text" name="context" class="form-control" onChange={this.onChange} required />

						<label for="file">somefile</label>
						<input type="file" name="file" class="form-control" onChange={this.onChange} />
						<br></br>

						<input type="submit" class="btn btn-primary" value="createThread" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
